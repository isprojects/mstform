{
    "name": "mstform",
    "version": "1.27.0",
    "description": "mobx-state-tree powered forms",
    "main": "dist/mstform.js",
    "typings": "dist/src/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "author": "ISProjects",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:isprojects/mstform.git"
    },
    "scripts": {
        "start": "webpack-dev-server --open --config webpack.dev.js",
        "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "build": "webpack --config webpack.prod.js",
        "prepublishOnly": "yarn run lint && yarn run test && yarn run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:debug": "node --nolazy --inspect-brk=9229 ./node_modules/.bin/jest --runInBand",
        "test:prod": "yarn run lint && yarn run test -- --coverage --no-cache",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "{src,test,demo}/**/*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "roots": [
            "<rootDir>/src/",
            "<rootDir>/test/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverage": false
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/lodash.debounce": "^4.0.6",
        "@types/node": "^10.0.3",
        "@types/react": "^16.9.11",
        "@types/react-dom": "^16.9.4",
        "clean-webpack-plugin": "^0.1.19",
        "coveralls": "^3.0.0",
        "cross-env": "^5.1.1",
        "decimal.js-light": "^2.5.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^0.14.0",
        "jest": "^26",
        "lint-staged": "^7.1.3",
        "mobx": "^5.15.0",
        "mobx-react": "^6.1.4",
        "mobx-state-tree": "3.15.0",
        "prettier": "^1.13.4",
        "prompt": "^1.0.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "replace-in-file": "^3.0.0-beta.2",
        "ts-jest": "^26",
        "ts-loader": "^4.4.2",
        "ts-node": "^6.0.0",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.1.0",
        "tslint-config-standard": "^9.0.0",
        "typescript": "^4",
        "validate-commit-msg": "^2.12.2",
        "webpack": "^4.16.2",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5",
        "webpack-merge": "^4.1.3"
    },
    "peerDependencies": {
        "decimal.js-light": "^2.5.0",
        "mobx": "^5.15.0",
        "mobx-state-tree": "^3.15.0"
    },
    "keywords": [
        "mobx",
        "mobx-state-tree",
        "form",
        "field",
        "repeating",
        "state management"
    ],
    "dependencies": {
        "lodash.debounce": "^4.0.8"
    }
}
