{
    "name": "mstform",
    "version": "1.32.0",
    "description": "mobx-state-tree powered forms",
    "main": "dist/mstform.js",
    "typings": "dist/src/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "author": "ISProjects",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:isprojects/mstform.git"
    },
    "scripts": {
        "start": "webpack serve --open --config webpack.dev.js",
        "lint": "eslint --format codeframe 'src/**/*.ts'",
        "build": "webpack --config webpack.prod.js",
        "prepublishOnly": "yarn run lint && yarn run test && yarn run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:debug": "node --nolazy --inspect-brk=9229 ./node_modules/.bin/jest --runInBand",
        "test:prod": "yarn run lint && yarn run test -- --coverage --no-cache",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "{src,test,demo}/**/*.ts": [
            "prettier --write"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "roots": [
            "<rootDir>/src/",
            "<rootDir>/test/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverage": false
    },
    "devDependencies": {
        "@types/jest": "^29.2.0",
        "@types/lodash.debounce": "^4.0.6",
        "@types/node": "^16",
        "@types/react": "^18.0.24",
        "@types/react-dom": "^18.0.8",
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "coveralls": "^3.0.0",
        "cross-env": "^5.1.1",
        "decimal.js-light": "^2.5.1",
        "eslint": "^7.11.0",
        "html-webpack-plugin": "^5.3.2",
        "husky": "^0.14.0",
        "jest": "^29",
        "lint-staged": "^11.1.1",
        "mobx": "^6.3.2",
        "mobx-react": "^7.5.3",
        "mobx-state-tree": "5.0.2",
        "prettier": "^2.3.2",
        "prompt": "^1.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "terser-webpack-plugin": "^5.3.6",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "typescript": "^4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.11.1",
        "webpack-merge": "^5.8.0"
    },
    "peerDependencies": {
        "decimal.js-light": "^2.5.0",
        "mobx": "^6.1.0",
        "mobx-state-tree": "^5"
    },
    "keywords": [
        "mobx",
        "mobx-state-tree",
        "form",
        "field",
        "repeating",
        "state management"
    ],
    "dependencies": {
        "lodash.debounce": "^4.0.8"
    }
}
